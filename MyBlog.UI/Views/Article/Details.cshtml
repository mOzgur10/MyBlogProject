@model MyBlog.UI.Models.VMs.ArticleVM
@using System.Security.Claims

@{
    ViewData["Title"] = "Makale Detayı";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-3 text-center">@Model.Title</h1>

            <p class="lead text-muted text-center">@Model.Description</p>

            <div class="row">
                <div class="col-12 mx-auto border-top border-bottom border-secondary-subtle py-3 mb-5">
                    <div class="d-flex justify-content-between text-muted small">
                        <!-- Sol grup -->
                        <div class="d-flex align-items-center gap-2">
                            <img src="@Model.AppUserImage" alt="User Photo"
                                 class="rounded-circle" style="width: 28px; height: 28px; object-fit: cover;">
                            <span>@Model.AppUserName</span>
                        </div>

                        <!-- Sağ grup -->
                        <div class="d-flex align-items-center gap-3">
                            <span>@Model.Date</span>
                            <span>@Model.ReadTime min read</span>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImageUrl" alt="Makale Görseli" class="img-fluid rounded" style="max-height: 500px; object-fit: cover;">
                </div>
            }

            <div class="mb-4" style="white-space: pre-wrap; font-size: 18px;">
                <p>@Model.Content</p>
            </div>

            @if (Model.AppUserId == currentUserId || User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <div class="text-end mb-4">
                   
                    <a asp-controller="Article" asp-action="UpdateArticle" asp-route-id="@Model.Id" class="btn btn-warning me-2">Düzenle</a>

                    
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteArticleModal">Sil</button>
                </div>
            }
            
          
        </div>
    </div>
</div>
<div id="commentSection" class="col-12 col-md-8 mx-auto mt-5" ></div>
<div class="text-end col-12 col-md-8 mx-auto mt-4">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Yorum Yaz</button>
</div>

<div class="modal fade" id="deleteArticleModal" tabindex="-1" aria-labelledby="deleteArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-controller="Article" asp-action="DeleteArticle">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteArticleModalLabel">Makale Sil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <p>Bu makaleyi silmek istediğinizden emin misiniz?</p>
                    <input type="hidden" id="deleteArticleId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Yorum Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <textarea id="commentText" class="form-control" rows="4" placeholder="Yorumunuzu yazın..."></textarea>
                <input type="hidden" id="articleId" value="@Model.Id" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" id="submitComment">Gönder</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="deleteCommentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteCommentForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteCommentModalLabel">Yorumu Sil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <p>Yorumu silmek istediğinizden emin misiniz?</p>
                    <input type="hidden" id="deleteCommentId" name="commentId" />
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function loadComments() {
            $.ajax({
                url: '/Comment/CommentList',
                type: 'GET',
                data: { articleId: '@Model.Id' },
                success: function (result) {
                    $('#commentSection').html(result);
                }
            });
        }

        $(document).ready(function () {
            loadComments();
                $('.btn-danger').click(function () {
            const articleId = '@Model.Id';  // Id'yi modelden alıyoruz
            $('#deleteArticleId').val(articleId); // Modalın input'unu set ediyoruz
        });
            
            $('#submitComment').click(function () {
                const commentText = $('#commentText').val();
                const articleId = $('#articleId').val();

                if (!commentText.trim()) {
                    alert("Yorum boş olamaz.");
                    return;
                }

                $.ajax({
                    url: '/Comment/CreateComment',
                    type: 'POST',
                    data: {
                        content: commentText,
                        articleId: articleId
                    },
                    success: function () {
                        $('#commentModal').modal('hide');
                        $('#commentText').val('');
                        loadComments();
                    },
                    error: function () {
                        alert("Yorum gönderilirken bir hata oluştu.");
                    }
                });
            });

            
            $('#deleteCommentForm').on('submit', function (e) {
                e.preventDefault();

                const commentId = $('#deleteCommentId').val();

                $.ajax({
                    url: '/Comment/DeleteComment',
                    type: 'POST',
                    data: { commentId: commentId },
                    success: function () {
                        $('#deleteCommentModal').modal('hide');
                        loadComments(); // Silindikten sonra tekrar listele
                    },
                    error: function () {
                        alert("Yorum silinirken bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}

