
@model IEnumerable<MyBlog.UI.Models.VMs.ArticleVM>

<div class="container my-4">
    <div class="row row-cols-1 g-4">

        @foreach (var article in Model)
        {
            <div class="col">
                
                    <div class="card border-0 shadow-sm h-100">

                        <div class="row g-0">
                            <!-- Sol içerik -->
                            <div class="col-md-8 d-flex flex-column justify-content-between p-3">
                                @if(article.ShowUserInfo==true){
                                <div class="d-flex align-items-center mb-2">
                                    <a asp-controller="AppUser" asp-action="UserProfile" asp-route-id="@article.AppUserId" class="text-muted text-decoration-none">
                                    <img src="@article.AppUserImage" alt="User Photo"
                                         class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                    
                                        <small>@article.AppUserName</small>
                                    </a>
                                </div>
                                }
                                <div>
                                    <a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id"
                                       class="text-decoration-none text-dark">
                                        <h5 class="card-title">@article.Title</h5>
                                    
                                    
                                    <p class="card-text text-muted">@article.Description</p>
                                </a>
                                </div>
                                <div class="d-flex justify-content-between text-muted small mt-3">
                                    <span>@article.Date</span>
                                    <span>@article.ReadTime min read</span>
                                </div>
                            </div>

                            <!-- Sağ görsel -->
                            <div class="col-md-4 d-flex align-items-center justify-content-center p-3">
                                <img src="@article.ImageUrl"
                                     alt="thumbnail"
                                     class="img-fluid rounded-3"
                                     style="max-height: 180px; object-fit: cover; width: 100%;">
                            </div>
                        </div>

                    </div>
                
            </div>
        }
    </div>
</div>